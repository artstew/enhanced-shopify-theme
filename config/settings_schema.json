[
  {
    "name": "theme_info",
    "theme_name": "Enhanced SeaTox Theme",
    "theme_version": "1.0.0",
    "theme_author": "Artstew Design",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      },
      {
        "type": "font_picker",
        "id": "type_secondary_font",
        "default": "work_sans_n4",
        "label": "Secondary Font"
      },
      {
        "type": "range",
        "id": "body_font_size",
        "min": 12,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Body Font Size",
        "default": 16
      },
      {
        "type": "range",
        "id": "heading_font_size",
        "min": 16,
        "max": 48,
        "step": 2,
        "unit": "px",
        "label": "Heading Font Size",
        "default": 32
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "color",
        "id": "primary_color",
        "default": "#007ace",
        "label": "Primary Color"
      },
      {
        "type": "color",
        "id": "secondary_color",
        "default": "#6c757d",
        "label": "Secondary Color"
      },
      {
        "type": "color",
        "id": "accent_color",
        "default": "#28a745",
        "label": "Accent Color"
      },
      {
        "type": "color",
        "id": "error_color",
        "default": "#dc3545",
        "label": "Error Color"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  },
  {
    "name": "Header Settings",
    "settings": [
      {
        "type": "checkbox",
        "id": "sticky_header",
        "label": "Enable Sticky Header",
        "default": true
      },
      {
        "type": "select",
        "id": "header_layout",
        "label": "Header Layout",
        "options": [
          { "value": "horizontal", "label": "Horizontal" },
          { "value": "centered", "label": "Centered" },
          { "value": "split", "label": "Split" }
        ],
        "default": "horizontal"
      },
      {
        "type": "checkbox",
        "id": "show_search_header",
        "label": "Show Search in Header",
        "default": true
      }
    ]
  },
  {
    "name": "Footer Settings",
    "settings": [
      {
        "type": "select",
        "id": "footer_layout",
        "label": "Footer Layout",
        "options": [
          { "value": "simple", "label": "Simple" },
          { "value": "columns", "label": "Multi-Column" },
          { "value": "centered", "label": "Centered" }
        ],
        "default": "columns"
      },
      {
        "type": "checkbox",
        "id": "show_social_footer",
        "label": "Show Social Links",
        "default": true
      }
    ]
  },
  {
    "name": "Product Settings",
    "settings": [
      {
        "type": "select",
        "id": "product_image_size",
        "label": "Product Image Size",
        "options": [
          { "value": "small", "label": "Small" },
          { "value": "medium", "label": "Medium" },
          { "value": "large", "label": "Large" }
        ],
        "default": "medium"
      },
      {
        "type": "checkbox",
        "id": "product_zoom",
        "label": "Enable Image Zoom",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show Product Vendor",
        "default": false
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "text",
        "id": "social_facebook_url",
        "label": "Facebook URL"
      },
      {
        "type": "text",
        "id": "social_twitter_url",
        "label": "Twitter URL"
      },
      {
        "type": "text",
        "id": "social_instagram_url",
        "label": "Instagram URL"
      },
      {
        "type": "text",
        "id": "social_youtube_url",
        "label": "YouTube URL"
      },
      {
        "type": "text",
        "id": "social_linkedin_url",
        "label": "LinkedIn URL"
      },
      {
        "type": "text",
        "id": "social_tiktok_url",
        "label": "TikTok URL"
      }
    ]
  }
]
