{% style %}
  {% # Load font variations with display: swap %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  
  {% if settings.type_secondary_font %}
    {{ settings.type_secondary_font | font_face: font_display: 'swap' }}
    {{ settings.type_secondary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {% endif %}

  :root {
    {% # Original variables %}
    --font-primary--family: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-primary--style: {{ settings.type_primary_font.style }};
    --font-primary--weight: {{ settings.type_primary_font.weight }};
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;
    --color-background: {{ settings.background_color }};
    --color-foreground: {{ settings.foreground_color }};
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;
    
    {% # Enhanced theme variables %}
    --primary-color: {{ settings.primary_color | default: '#007ace' }};
    --primary-color-dark: {{ settings.primary_color | color_darken: 10 | default: '#0056b3' }};
    --secondary-color: {{ settings.secondary_color | default: '#6c757d' }};
    --secondary-color-dark: {{ settings.secondary_color | color_darken: 10 | default: '#545b62' }};
    --accent-color: {{ settings.accent_color | default: '#28a745' }};
    --error-color: {{ settings.error_color | default: '#dc3545' }};
    
    {% # Typography %}
    --font-secondary--family: {% if settings.type_secondary_font %}{{ settings.type_secondary_font.family }}, {{ settings.type_secondary_font.fallback_families }}{% else %}var(--font-primary--family){% endif %};
    --font-size-body: {{ settings.body_font_size | default: 16 }}px;
    --font-size-heading: {{ settings.heading_font_size | default: 32 }}px;
  }

  body {
    font-family: var(--font-primary--family);
    font-size: var(--font-size-body);
    color: var(--color-foreground);
    background-color: var(--color-background);
    line-height: 1.6;
    margin: 0;
    padding: 0;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-secondary--family);
    color: var(--color-foreground);
    margin: 0 0 1rem 0;
  }

  h1 { font-size: calc(var(--font-size-heading) * 1.2); }
  h2 { font-size: calc(var(--font-size-heading) * 1); }
  h3 { font-size: calc(var(--font-size-heading) * 0.9); }
  h4 { font-size: calc(var(--font-size-heading) * 0.8); }
  h5 { font-size: calc(var(--font-size-heading) * 0.7); }
  h6 { font-size: calc(var(--font-size-heading) * 0.6); }

  a {
    color: var(--primary-color);
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--primary-color-dark);
  }
  
  .container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
  }
{% endstyle %}
