{% comment %}
  Simple breadcrumbs section for use in page templates
{% endcomment %}

<nav class="breadcrumbs-section" aria-label="Breadcrumb">
  {% render 'breadcrumbs' %}
</nav>

{% stylesheet %}
  .breadcrumbs-section {
    padding: 1rem 0;
    background-color: {{ section.settings.background_color | default: 'transparent' }};
  }
  
  .breadcrumbs-section .container {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 var(--page-margin);
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Breadcrumbs",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "transparent"
    }
  ],
  "presets": [
    {
      "name": "Breadcrumbs"
    }
  ]
}
{% endschema %}