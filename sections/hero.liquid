{% comment %}
  Hero section with customizable background, text, and call-to-action
{% endcomment %}

<section 
  class="hero hero--{{ section.settings.height }}" 
  style="
    background-color: {{ section.settings.background_color }};
    {% if section.settings.background_image %}
      background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
      background-size: cover;
      background-position: {{ section.settings.background_position }};
    {% endif %}
  "
  {{ section.shopify_attributes }}
>
  {% if section.settings.overlay_enable %}
    <div class="hero__overlay" style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  {% endif %}
  
  <div class="hero__content">
    <div class="hero__text" style="text-align: {{ section.settings.text_alignment }}; color: {{ section.settings.text_color }};">
      {% if section.settings.heading != blank %}
        <h1 class="hero__heading">{{ section.settings.heading }}</h1>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p class="hero__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="hero__button btn btn--{{ section.settings.button_style }}">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    background-repeat: no-repeat;
  }
  
  .hero--small { min-height: 300px; }
  .hero--medium { min-height: 500px; }
  .hero--large { min-height: 700px; }
  .hero--full { min-height: 100vh; }
  
  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .hero__content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    max-width: 800px;
    width: 100%;
  }
  
  .hero__heading {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .hero__subheading {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }
  
  .hero__button {
    display: inline-block;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .btn--primary {
    background-color: var(--primary-color, #007ace);
    color: white;
  }
  
  .btn--secondary {
    background-color: transparent;
    border: 2px solid var(--primary-color, #007ace);
    color: var(--primary-color, #007ace);
  }
  
  @media (max-width: 768px) {
    .hero__heading { font-size: 2rem; }
    .hero__subheading { font-size: 1rem; }
    .hero__content { padding: 1rem; }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover amazing products and exceptional service"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" }
      ],
      "default": "primary"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Section Height",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" },
        { "value": "full", "label": "Full Screen" }
      ],
      "default": "medium"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "select",
      "id": "background_position",
      "label": "Background Position",
      "options": [
        { "value": "center center", "label": "Center" },
        { "value": "top center", "label": "Top" },
        { "value": "bottom center", "label": "Bottom" }
      ],
      "default": "center center"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "text_alignment",
      "id": "text_alignment",
      "label": "Text Alignment",
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "overlay_enable",
      "label": "Enable Overlay",
      "default": false
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}