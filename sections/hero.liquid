{% comment %}
  Hero section with customizable background, text, and call-to-action
{% endcomment %}

<section 
  class="hero hero--{{ section.settings.height }} section-{{ section.id }}" 
  style="
    background-color: {{ section.settings.background_color }};
    {% unless section.settings.background_video %}
      {% if section.settings.background_image %}
        background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
        background-size: cover;
        background-position: {{ section.settings.background_position }};
      {% endif %}
    {% endunless %}
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    border-radius: {{ section.settings.border_radius }}px;
    {% if section.settings.enable_shadow %}
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    {% endif %}
  "
  {{ section.shopify_attributes }}
>
  {% if section.settings.background_video %}
    <div class="hero__video">
      <video 
        autoplay 
        muted 
        loop 
        playsinline 
        class="hero__video-element"
        {% if section.settings.video_poster %}poster="{{ section.settings.video_poster | image_url: width: 1920 }}"{% endif %}
      >
        <source src="{{ section.settings.background_video }}" type="video/mp4">
        {% if section.settings.background_image %}
          <img src="{{ section.settings.background_image | image_url: width: 1920 }}" alt="Video fallback">
        {% endif %}
      </video>
    </div>
  {% endif %}
  
  {% if section.settings.overlay_enable %}
    <div class="hero__overlay" style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  {% endif %}
  
  <div class="hero__content hero__content--{{ section.settings.content_alignment }}">
    <div class="hero__text" style="text-align: {{ section.settings.text_alignment }}; color: {{ section.settings.text_color }}; gap: {{ section.settings.content_gap }}px;">
      {% if section.settings.heading != blank %}
        <h1 class="hero__heading">{{ section.settings.heading }}</h1>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p class="hero__subheading">{{ section.settings.subheading }}</p>
      {% endif %}
      
      {% if section.settings.button_text != blank and section.settings.button_url != blank %}
        <a href="{{ section.settings.button_url }}" class="hero__button btn btn--{{ section.settings.button_style }}">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% stylesheet %}
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    background-repeat: no-repeat;
    overflow: hidden;
  }

  .hero__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }

  .hero__video-element {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Section Width Controls */
  .section-{{ section.id }} {
    {%- case section.settings.section_width -%}
      {%- when 'full-width' -%}
        width: 100%;
        max-width: none;
        margin: 0;
      {%- when 'narrow' -%}
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
      {%- when 'wide' -%}
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
      {%- else -%}
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    {%- endcase -%}
  }
  
  .hero--small { min-height: 300px; }
  .hero--medium { min-height: 500px; }
  .hero--large { min-height: 700px; }
  .hero--full { min-height: 100vh; }
  
  .hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .hero__content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    max-width: 800px;
    width: 100%;
  }

  .hero__content--left {
    justify-self: flex-start;
    text-align: left;
  }

  .hero__content--center {
    justify-self: center;
    text-align: center;
  }

  .hero__content--right {
    justify-self: flex-end;
    text-align: right;
  }

  .hero__text {
    display: flex;
    flex-direction: column;
    align-items: inherit;
  }
  
  .hero__heading {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.2;
  }
  
  .hero__subheading {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    opacity: 0.9;
  }
  
  .hero__button {
    display: inline-block;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  
  .btn--primary {
    background-color: var(--primary-color, #007ace);
    color: white;
  }
  
  .btn--secondary {
    background-color: transparent;
    border: 2px solid var(--primary-color, #007ace);
    color: var(--primary-color, #007ace);
  }
  
  @media (max-width: 768px) {
    .hero__heading { font-size: 2rem; }
    .hero__subheading { font-size: 1rem; }
    .hero__content { padding: 1rem; }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover amazing products and exceptional service"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "options": [
        { "value": "primary", "label": "Primary" },
        { "value": "secondary", "label": "Secondary" }
      ],
      "default": "primary"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Section Height",
      "options": [
        { "value": "small", "label": "Small" },
        { "value": "medium", "label": "Medium" },
        { "value": "large", "label": "Large" },
        { "value": "full", "label": "Full Screen" }
      ],
      "default": "medium"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Background Video"
    },
    {
      "type": "video",
      "id": "background_video",
      "label": "Background Video",
      "info": "Video will override background image when provided"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster Image",
      "info": "Fallback image for video loading"
    },
    {
      "type": "select",
      "id": "background_position",
      "label": "Background Position",
      "options": [
        { "value": "center center", "label": "Center" },
        { "value": "top center", "label": "Top" },
        { "value": "bottom center", "label": "Bottom" }
      ],
      "default": "center center"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f8f9fa"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "text_alignment",
      "id": "text_alignment",
      "label": "Text Alignment",
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "overlay_enable",
      "label": "Enable Overlay",
      "default": false
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 50
    },
    {
      "type": "header",
      "content": "Layout & Spacing"
    },
    {
      "type": "select",
      "id": "section_width",
      "options": [
        {
          "value": "full-width",
          "label": "Full width"
        },
        {
          "value": "page-width",
          "label": "Page width"
        },
        {
          "value": "narrow",
          "label": "Narrow"
        },
        {
          "value": "wide",
          "label": "Wide"
        }
      ],
      "default": "full-width",
      "label": "Section width"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Content alignment"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom", 
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "content_gap",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Content gap",
      "default": 24
    },
    {
      "type": "header",
      "content": "Visual Style"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
