{% comment %}
  Simple hero section without complex features
{% endcomment %}

<section class="simple-hero">
  <div class="simple-hero__content">
    <h1>{{ section.settings.heading | default: "Welcome to Our Store" }}</h1>
    <p>{{ section.settings.subheading | default: "Discover amazing products" }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_url | default: '/collections/all' }}" class="simple-hero__button">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .simple-hero {
    background-color: #f8f9fa;
    padding: 4rem 2rem;
    text-align: center;
  }
  
  .simple-hero__content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .simple-hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #333;
  }
  
  .simple-hero p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    color: #666;
  }
  
  .simple-hero__button {
    display: inline-block;
    background-color: #007ace;
    color: white;
    padding: 1rem 2rem;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }
  
  .simple-hero__button:hover {
    background-color: #0056b3;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Simple Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover amazing products"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Simple Hero"
    }
  ]
}
{% endschema %}