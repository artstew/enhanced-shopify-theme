{% comment %}
  Image gallery section with various layout options
{% endcomment %}

<section class="gallery gallery--{{ section.settings.layout }}" {{ section.shopify_attributes }}>
  <div class="gallery__container">
    {% if section.settings.heading != blank %}
      <div class="gallery__header">
        <h2 class="gallery__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="gallery__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="gallery__grid">
      {% for block in section.blocks %}
        <div class="gallery__item" {{ block.shopify_attributes }}>
          <div class="gallery__image-wrapper">
            {% if block.settings.image %}
              <img 
                src="{{ block.settings.image | image_url: width: 800 }}" 
                alt="{{ block.settings.caption | default: block.settings.image.alt }}"
                class="gallery__image"
                loading="lazy"
              >
              {% if section.settings.show_overlay %}
                <div class="gallery__overlay">
                  {% if block.settings.caption != blank %}
                    <p class="gallery__caption">{{ block.settings.caption }}</p>
                  {% endif %}
                  {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}" class="gallery__link">View More</a>
                  {% endif %}
                </div>
              {% endif %}
            {% else %}
              <div class="gallery__placeholder">
                <p>Add an image</p>
              </div>
            {% endif %}
          </div>
          
          {% if block.settings.caption != blank and section.settings.show_captions_below %}
            <p class="gallery__caption-below">{{ block.settings.caption }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  .gallery {
    padding: 4rem 2rem;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  
  .gallery__container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .gallery__header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .gallery__heading {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: {{ section.settings.heading_color | default: '#333' }};
  }
  
  .gallery__subheading {
    font-size: 1.1rem;
    color: #666;
  }
  
  .gallery__grid {
    display: grid;
    gap: 1rem;
  }
  
  /* Grid layouts */
  .gallery--masonry .gallery__grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-auto-rows: 200px;
  }
  
  .gallery--two-column .gallery__grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .gallery--three-column .gallery__grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .gallery--four-column .gallery__grid {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .gallery__item {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
  }
  
  .gallery--masonry .gallery__item:nth-child(3n) {
    grid-row: span 2;
  }
  
  .gallery--masonry .gallery__item:nth-child(5n) {
    grid-row: span 3;
  }
  
  .gallery__image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  
  .gallery__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .gallery__item:hover .gallery__image {
    transform: scale(1.05);
  }
  
  .gallery__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.7);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    color: white;
    text-align: center;
    padding: 1rem;
  }
  
  .gallery__item:hover .gallery__overlay {
    opacity: 1;
  }
  
  .gallery__caption {
    font-size: 1rem;
    margin-bottom: 1rem;
  }
  
  .gallery__link {
    background: {{ section.settings.accent_color | default: '#007ace' }};
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }
  
  .gallery__link:hover {
    background: #0056b3;
  }
  
  .gallery__caption-below {
    margin-top: 0.5rem;
    text-align: center;
    color: #666;
    font-size: 0.9rem;
  }
  
  .gallery__placeholder {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    min-height: 200px;
  }
  
  @media (max-width: 768px) {
    .gallery { padding: 2rem 1rem; }
    .gallery__heading { font-size: 2rem; }
    
    .gallery--three-column .gallery__grid,
    .gallery--four-column .gallery__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 480px) {
    .gallery--two-column .gallery__grid,
    .gallery--three-column .gallery__grid,
    .gallery--four-column .gallery__grid {
      grid-template-columns: 1fr;
    }
  }
{% endstylesheet %}

